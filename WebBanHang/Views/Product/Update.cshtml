@model Product

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <!-- Gửi Id sản phẩm về server -->
    <input type="hidden" asp-for="Id" />

    <h2>Update Product</h2>
    <hr />
    <div class="row">
        <div class="col-12">
            <div class="form-group pb-2">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group pb-2">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group pb-2">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group pb-2">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" asp-items="@ViewBag.CategoryList" class="form-control">
                    <option disabled value="">-- Select Category --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <div class="form-group pb-2">
                <label asp-for="ImageUrl">Product Image</label>
                <input asp-for="ImageUrl" type="file" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>

               
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <div class="mt-2">
                        <img src="@Url.Content(Model.ImageUrl)" alt="Current Image" width="150" />
                    </div>
                }
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
