@model Category

@{
    ViewData["Title"] = "Delete Category";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="DeleteConfirmed" asp-controller="Category" method="post">
    @* Hidden ID để truyền khi POST *@
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label asp-for="DisplayOrder" class="control-label"></label>
        <input asp-for="DisplayOrder" class="form-control" disabled />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back to List</a>
    </div>
</form>
