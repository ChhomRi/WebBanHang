@model List<Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
}

<partial name="_ThongBao" />

<div class="row mb-3">
    <div class="col-md-6">
        <h2>DANH SÁCH DANH MỤC</h2>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill"></i> Thêm mới
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Tên danh mục</th>
                <th>Thứ tự hiển thị</th>
                <th style="width: 180px;">Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Name</td>
                    <td>@x.DisplayOrder</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@x.Id" class="btn btn-sm btn-success me-1">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a asp-action="Delete" asp-route-id="@x.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Không có danh mục nào để hiển thị.</div>
}
